<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}AdopteUnLegume{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/build/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('/build/css/general.css') }}">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    {% endblock %}
</head>

<body>
{% block body %}
<div class="container-fluid">
    {# NavBar #}
        {% block navbar %}
        <div class="row">
            <div class="d-flex flex-row justify-content-around navBar">
                <div class="p-2 titreNav">
                    AdopteUnLegume
                </div>
                <div class="p-2 titreNav">
                    <a class="navLink" href="/">
                        <i class="fas fa-home"></i> Home
                    </a>
                </div>
                <div class="p-2 titreNav">
                        <a class="navLink" href="/admin">
                            <i class="fas fa-toolbox"></i> Admin
                        </a>
                    </div>
                <div class="p-2 ml-auto titreNav">
                    <a class="navLink" href="/panier">
                    Panier <span class="badge badge-danger" id="compteur">{{ nbArticles }}</span>
                    </a>
                </div>
            </div>
        </div>
        {% endblock navbar %}
    {# Contenu #}
    {% block content %}
    {% endblock content %}
{% endblock body %}
{% block javascripts %}
<script src="{{ asset('/build/app.js') }}"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}
</body>

</html>
